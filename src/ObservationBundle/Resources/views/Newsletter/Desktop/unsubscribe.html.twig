{% extends '@Observation/layout.desktop.html.twig' %}

{% block title %}Se désabonné{%  endblock %}

{% block content %}
    <div class="center-80">
        <h1>Vous souhaitez vous désabonner de la newsletter </h1>
        {{ form_start(form) }}
        {{ form_errors(form) }}
        <div class="form-group">
            {{ form_label(form.email) }}
            {{ form_widget(form.email, {'attr':{'value' : email}}) }}
        </div>
        <div class="center-button">
            {{ form_widget(form.save) }}
        </div>
        {{ form_end(form) }}
    </div>


{% endblock %}
