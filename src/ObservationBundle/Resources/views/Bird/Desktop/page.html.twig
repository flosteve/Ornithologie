{% if birds is null %}
    <div>
        Il n'y a aucun oiseaux.
    </div>
{% else %}
        {% for bird in birds %}
            <div class="bird " data-href="{{ path('bird_description', {'id': bird.id}) }}">
                {% for picture in  bird.pictures if picture.observation is null %}
                    <img src="{{ asset(picture.webPath) }}" class="left img-responsive" alt="bird">
                    {% else %}
                        <p class="left text-center">Pas de photos</p>
                {% endfor %}

                <div class="right">
                    <h4>{{ bird.nomVern != null ? bird.nomVern : bird.lbNom}}</h4>
                    <small>{{ bird.lbNom }}</small>
                </div>

            </div>
        {% endfor %}
    <div class="length" data-length="{{ birds| length }}" hidden></div>
{% endif %}
