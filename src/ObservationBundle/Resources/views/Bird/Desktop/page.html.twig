{% if birds is null %}
    <div>
        Il n'y a aucun oiseaux.
    </div>
{% else %}
    {#<div class="row">#}
        {#<div class="pull-right">#}
            {#<ul class="paginator">#}
                {#<li {% if page == 1 %}class="disabled"{% endif %}><i class="fa fa-chevron-left"></i></li>#}
                {#{% for i in range(1, nbPage) %}#}
                   {#<li {% if i == page %}class="active"{% endif %}><a href="#" data-page="{{ i }}">{{ i }}</a></li>#}
                {#{% endfor %}#}
                {#<li {% if page == nbPage %}class="disabled"{% endif %}><i class="fa fa-chevron-right"></i></li>#}
            {#</ul>#}
        {#</div>#}
    {#</div>#}
    {#<div class="row">#}
        {% for bird in birds %}
            <div class="col-sm-5 birds-list {% if loop.index is even %}right{% else %}left{% endif %}" data-href="{{ path('bird_description', {'id': bird.id}) }}">
                <div class="col-sm-4">
                    {% if bird.pictures|length > 0 %}
                        <img src="{{ bird.pictures[0].url }}" class="img-responsive" alt="bird">
                    {% else %}
                        Pas de photos
                    {% endif %}
                </div>

                <div class="col-sm-8">
                    <h4>{{ bird.nomVern != null ? bird.nomVern : bird.lbNom}}</h4>
                    <small>{{ bird.lbNom }} {{ bird.id }}</small>
                </div>

            </div>
        {% endfor %}
    {#</div>#}
    <div class="length" data-length="{{ birds| length }}" hidden>

    </div>
{% endif %}
