{% extends '@Observation/layout.desktop.html.twig' %}

{% block title %}Liste oiseaux{% endblock %}

{% block link %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/observation/css/list.bird.css') }}">
{% endblock %}
{% block content %}
    <div class="center-80">
        <a href="#" id="up"><i class="fa fa-chevron-circle-up fa-2x"></i></a>
        <div class="row">
            <div class="col-md-8">
                <h1>Liste des fiches oiseaux</h1>
            </div>
            <div id="filter" class="col-md-4 center">
                <div class="row">
                    <label for="color-plumage" class="control-label col-sm-4">plumage</label>
                    <div class="col-sm-8">
                        <select name="color-plumage" id="color-plumage" class="form-control">
                            <option value="" selected>Couleur</option>
                            <option value="blanc">Blanc</option>
                            <option value="bleu">Bleu</option>
                            <option value="brun">Brun</option>
                            <option value="gris">Gris</option>
                        </select>
                    </div>
                </div>
                <div class="row">
                    <label for="color-patte" class="control-label col-sm-4">pattes</label>
                    <div class="col-sm-8">
                        <select name="color-patte" id="color-patte" class="form-control">
                            <option value="" selected>Couleur</option>
                            <option value="blanc">Blanc</option>
                            <option value="bleu">Bleu</option>
                            <option value="brun">Brun</option>
                            <option value="gris">Gris</option>
                        </select>
                    </div>
                </div>
                <div class="row">
                    <label for="color-bec" class="control-label col-sm-4">bec</label>
                    <div class="col-sm-8">
                        <select name="color-bec" id="color-bec" class="form-control">
                            <option value="" selected>Couleur</option>
                            <option value="blanc">Blanc</option>
                            <option value="bleu">Bleu</option>
                            <option value="brun">Brun</option>
                            <option value="gris">Gris</option>
                        </select>
                    </div>
                </div>
                <input type="text" id="search" placeholder="Rechercher une fiche &#xf002;"
                       style="font-family:FontAwesome, Arial; text-align: right"
                       data-href="{{ path('bird_pagination', {'page': 1}) }}"/>


            </div>
        </div>
        <div id="birds"
             data-href="{{ path('bird_pagination', {'page': 1}) }}"></div>

        <div class="row">
            <div class="col-sm-2 col-sm-offset-5 loader"></div>
        </div>

    </div>
    <a href="#" id="add-birds" class="btn grey text-center"
       data-href="{{ path('bird_pagination', {'page': 1}) }}"><i
                class="fa fa-long-arrow-down"></i> Voir plus d'oiseaux</a>



{% endblock %}

{% block javascript %}
    {{ parent() }}
    <script src="{{ asset('bundles/observation/js/AJAX/Desktop/bird.list.js') }}"></script>
    <script src="{{ asset('bundles/observation/js/scroll.desktop.js') }}"></script>
{% endblock %}