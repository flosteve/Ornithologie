{% extends '@Observation/layout.mobile.html.twig' %}

{% block title %}Description {{ bird.aName }}{% endblock %}

{% block link %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/observation/css/bird.description.css') }}">
{% endblock %}

{% block content %}
    <div class="center-80" id="description">
        <h1>{{ bird.nomVern }}
            <small>-{{ bird.lbNom }}</small>
        </h1>
        <hr>
        <div class="row">
            <div class="col-md-6 left ">
                <h2>Fiche descriptive</h2>
            </div>
        </div>
        <div class="row">
            {% if bird.fiche is not null %}
                <div class="col-xs-12">
                    <div class="col-xs-4">
                        {% for picture in  bird.pictures if picture.observation is null %}
                            <img src="{{ asset(picture.webPath) }}" class="left img-responsive" alt="bird">
                        {% else %}
                            <p class="left text-center">Pas de photos</p>
                        {% endfor %}
                    </div>
                    <div class="col-xs-8">
                        <div>
                            <strong>Estimation :</strong> {{ bird.fiche.minQuantity }} - {{ bird.fiche.maxQuantity }}
                            couples
                        </div>
                        <hr>
                        <div>
                            <strong>Status de conservation UICN:</strong>
                            {{ bird.fiche.status }}
                        </div>
                    </div>
                </div>
                <div class="col-xs-12">
                    <p class="text-justify">
                        {{ bird.fiche.description | rawdescr }}
                    </p>
                    {% if is_granted('ROLE_ADMIN') %}
                    <div class="row text-right">
                        <a href="{{ path('bird_edit', {'id': bird.id}) }}">Editer cette Fiche</a>
                    </div>
                    {% endif %}
                </div>


            {% else %}
                <p class="text-center">Cet oiseau n'a pas encore de fiche descritpif. <a
                            href="{{ path('bird_edit', {'id': bird.id}) }}" class="text-right">Editer cette Fiche</a>
                </p>
            {% endif %}
        </div>
    </div>
    <div class="row">
        <div id="retour">
            <a href="{{ path('bird_list') }}" class="col-xs-12 text-center"><span class="fa fa-arrow-left"></span>
                Retour Ã  la liste</a>
        </div>
    </div>

{% endblock %}



