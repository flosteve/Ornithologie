<div id="user" class="tab-pane {% if app.request.attributes.get('_route') in ['user_profil', 'user_my_observations', 'user_observations', 'user_stars'] %}active{% endif %}">
    <ul class="list-inline">
        <li {% if app.request.attributes.get('_route') == 'user_profil' %}class="active"{% endif %}><a href="{{ path('user_profil') }}"><i class="fa fa-id-card-o " aria-hidden="true"></i></a></li>
        <li {% if app.request.attributes.get('_route') == 'user_my_observations' %}class="active"{% endif %}><a href="{{ path('user_my_observations') }}"><i class="fa fa-binoculars"></i></a></li>
        {% if 'ROLE_NATURALISTE' in app.user.roles %}
            <li {% if app.request.attributes.get('_route')  == 'user_observations'%}class="active"{% endif %}><a href="{{ path('user_observations') }}">Validations</a></li>
        {% else %}
            <li {% if app.request.attributes.get('_route') == 'user_stars' %}class="active"{% endif %}><a href="{{ path('user_stars') }}"><span class="fa fa-star-o"></span></a></li>
        {% endif %}
        {% if app.user %}
            <li><a href="{{ path('user_logout') }}"><i class="fa fa-sign-out" aria-hidden="true"></i></a></li>
        {% endif %}
    </ul>
</div>