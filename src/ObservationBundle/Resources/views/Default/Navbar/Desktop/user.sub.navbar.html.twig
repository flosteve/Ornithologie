<div id="user" class="tab-pane {% if app.request.attributes.get('_route')  in ['user_profil', 'user_my_observations', 'user_observations', 'user_stars']%}active{% endif %}">
    <ul class=" nav navbar-nav">
        <li {% if app.request.attributes.get('_route')  == 'user_profil'%}class="active"{% endif %}><a href="{{ path('user_profil') }}">Profil</a></li>
        <li {% if app.request.attributes.get('_route')  == 'user_my_observations'%}class="active"{% endif %}><a href="{{ path('user_my_observations') }}">Mes Observations</a></li>
        {% if 'ROLE_NATURALISTE' in app.user.roles %}
            <li {% if app.request.attributes.get('_route')  == 'user_observations'%}class="active"{% endif %}><a href="{{ path('user_observations') }}">Validations</a></li>
        {% endif %}
        <li {% if app.request.attributes.get('_route')  == 'user_stars'%}class="active"{% endif %}><a href="{{ path('user_stars') }}">Recompenses</a></li>
    </ul>
</div>