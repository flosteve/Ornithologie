<div id="user"
     class="tab-pane center-80 {% if app.request.attributes.get('_route')  in ['user_profil', 'user_my_observations', 'user_observations', 'user_stars', 'user_users'] %}active{% endif %}">
    <ul class=" nav navbar-nav pull-right">
        <li class="second_line {% if app.request.attributes.get('_route')  == 'user_profil' %}active{% endif %}"><a
                    href="{{ path('user_profil') }}">Profil</a></li>
        <li class="second_line {% if app.request.attributes.get('_route')  == 'user_my_observations' %}active{% endif %}">
            <a href="{{ path('user_my_observations') }}">Mes Observations</a></li>
        {% if 'ROLE_NATURALISTE' in app.user.roles %}
            <li class="second_line {% if app.request.attributes.get('_route')  == 'user_observations' %}active{% endif %}">
                <a href="{{ path('user_observations') }}">Validations</a></li>
        {% else %}
            <li class="second_line {% if app.request.attributes.get('_route')  == 'user_stars' %}active{% endif %}"><a
                        href="{{ path('user_stars') }}">Recompenses</a></li>
        {% endif %}
        {% if 'ROLE_ADMIN' in app.user.roles %}
            <li class="second_line {{ app.request.attributes.get('_route') == 'user_users' ? 'active' : '' }}"><a
                        href="{{ path('user_users') }}">Liste des visiteurs</a></li>
            <li class="second_line {{ app.request.attributes.get('_route') == 'user_contacts' ? 'active' : '' }}"><a
                        href="{{ path('user_contacts') }}">Les messages</a></li>
        {% endif %}
    </ul>
</div>