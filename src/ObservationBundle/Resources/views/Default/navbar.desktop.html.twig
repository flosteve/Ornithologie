{# Navbar sur pc #}
<nav class="navbar navbar-light navbar-fixed-top" style="background-color: #e3f2fd;" role="navigation">
    <div class="container">
        {#  Block title navbar #}
        <div class="navbar-header">
            <a class="navbar-brand" href="{{ path('homepage') }}">Nos Amis les oiseaux</a>
        </div>
        {# Liste des menus principaux avec vérification de la route pour activé dynamiquement la navbar à l'aide de app.request.get('_route') #}
        <div>
            <ul class="navbar-nav nav pull-right">
                <li {% if app.request.attributes.get('_route') == 'homepage' %}class="active"{% endif %}>
                    <a href="{{ path('homepage') }}">
                        Accueil
                    </a>
                </li>
                <li {% if app.request.attributes.get('_route') == 'observation_add' %}class="active"{% endif %}>
                    <a href="{{ path('observation_add') }}">
                        Observation
                    </a>
                </li>
                {% if app.request.attributes.get('_route') in ['bird_list','bird_description', 'bird_location'] %}
                    <li class=" tabs active">
                        <a href="#bird" data-toggle="tab">
                            Fiches oiseaux
                        </a>
                    </li>
                {% else %}
                    <li {% if app.request.attributes.get('_route') == 'bird_list' %}class="active"{% endif %}>
                        <a href="{{ path('bird_list') }}">
                            Fiches oiseaux
                        </a>
                    </li>
                {% endif %}
                {% if app.user %}
                    {% if app.request.attributes.get('_routes') starts with 'user' %}
                        <li class="tabs {% if app.request.attributes.get('_route')  starts with 'user' %}active{% endif %}">
                            <a href="#user" data-toggle="tab">
                                Compte
                            </a>
                        </li>
                    {% else %}
                        <li><a href="{{ path('user_profil') }}">Compte</a></li>
                    {% endif %}
                {% else %}
                    <li {% if app.request.attributes.get('_route') == 'user_connect' %}class="active"{% endif %}>
                        <a href="{{ path('user_connect') }}">
                            Connection/Inscription
                        </a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
    {# Bloc contenant les sous-menus #}
    <div class="tab-content container">
        {# Inclusion du sous menu d'un oiseau si la variable bird est définie#}
        {% if bird  is defined %}
            {% include '@Observation/Default/navbar.desktop.bird.html.twig' with {'bird': bird} %}
        {% endif %}
        {# Inclusion du sous-menu user si le visiteur est connecter #}
        {% if app.user %}
            {% include '@Observation/Default/navbar.desktop.user.html.twig' %}
        {% endif %}
    </div>
</nav>