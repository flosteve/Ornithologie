    }
    #edit_avatar{
        border-radius: 50%;
        position: relative;
        bottom: 40px;
        left: 160px;
    }
    /*--- marging ----*/
    .marge-top{
        margin-top: 20px;
    }

    /*---- Couleur Background -----*/
