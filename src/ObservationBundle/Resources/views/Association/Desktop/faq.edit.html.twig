{% extends '@Observation/layout.desktop.html.twig' %}

{% block title %}Edition de la page FAQ{% endblock %}
{% block stylesheet %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/observation/css/billet.css') }}">
{% endblock %}

{% block content %}
    <div class="center-80">
        <h1>Edition de la FAQ</h1>
        {{ form_start(form,{'attr': {'class': ' form-horizontal'}}) }}
        {{ form_errors(form) }}

        <div class="form-group">
            {{ form_label(form.content, 'Contenu de la FAQ', {'label_attr':{'class': 'col-sm-2'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.content) }}
            </div>
            {{ form_errors(form.content) }}
        </div>
        <div class="form-group row">
            <div class="col-sm-2 col-sm-push-5">
                {{ form_widget(form.save) }}
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}

{% block javascript %}
    {{ parent() }}
    <script>
        $(document).ready(function () {
            $('#content_content').summernote({
                height: 400,
            });
        })
    </script>
{% endblock %}
