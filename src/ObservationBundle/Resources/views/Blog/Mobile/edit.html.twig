{% extends '@Observation/layout.mobile.html.twig' %}

{% block title %}Edition de la page blog{% endblock %}
{% block stylesheet %}
    {{ parent() }}
    <style>
        .note-editor .btn{
            width: auto;
            color: black;
        }
    </style>
{% endblock %}

{% block content %}
    <h1>Contenue de la page blog de l'association</h1>
    {{ form_start(form,{'attr': {'class': 'center-80'}}) }}
    {{ form_errors(form)}}

    <div class="form-group">
        {{ form_widget(form.content) }}
    </div>
    <div class="form-group row">
        <div class="col-xs-2 col-xs-push-5">
            {{ form_widget(form.save) }}
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}

{% block javascript %}
    {{ parent() }}
    <script>
        $(document).ready(function () {
            $('#content_content').summernote({
                height: 400
            });
        })
    </script>
{% endblock %}