{% extends '@Observation/layout.mobile.html.twig' %}

{% block title %}Edition de la page blog{% endblock %}
{% block stylesheet %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/observation/css/billet.css') }}">
{% endblock %}

{% block content %}
    <div class="center-90">
        <h3>{{ form.vars.data.id == null ? 'Cr√©ation' : 'Modification' }} d'un billet</h3>
        {{ form_start(form) }}
        {{ form_errors(form) }}

        <div class="form-group">
            {{ form_label(form.content, 'Contenu du billet') }}
            {{ form_widget(form.content) }}
            {{ form_errors(form.content) }}
        </div>
        <div class="form-group row">
            <div class="col-xs-6 col-xs-push-3">
                {{ form_widget(form.save) }}
            </div>
        </div>
        {{ form_end(form) }}
    </div>

{% endblock %}

{% block javascript %}
    {{ parent() }}
    <script>
        $(document).ready(function () {
            $('#content_content').summernote({
                height: 400
            });
        })
    </script>
{% endblock %}