{# Vue de demande de mot de passe sur pc #}
{%  extends 'ObservationBundle::layout.desktop.html.twig' %}

{% block title %}Mot de passe oubli√©{% endblock %}

{% block content %}
    <div class="center-80">
            <h1>Demande de nouveau mot de passe</h1>
            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
            {{ form_errors(form) }}
            <div class="form-group">
                {{ form_label(form.username, form.username.vars.label, {'label_attr': {'class': 'col-md-3 control-label'}}) }}
                <div class="col-md-5">
                    {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
                </div>
                {{ form_errors(form.username) }}
            </div>
            <div class="row">
                <div class="col-md-2 col-md-push-5">
                    {{ form_widget(form.save) }}
                </div>
            </div>
            {{ form_end(form) }}
    </div>
{% endblock %}
