{# Vue de demande de mot de passe sur pc #}
{%  extends 'ObservationBundle::layout.desktop.html.twig' %}

{% block title %}Mot de passe oubli√©{% endblock %}

{% block content %}
    <div class="panel panel-default">
        <div class="panel-heading">
            <h1>Demande de nouveau mot de passe</h1>
        </div>
        <div class="panel-body">
            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
            {{ form_errors(form) }}
            <div class="form-group">
                {{ form_label(form.username, form.username.vars.label, {'label_attr': {'class': 'col-md-5 control-label'}}) }}
                <div class="col-md-5">
                    {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
                </div>
                {{ form_errors(form.username) }}
            </div>
            <div class="text-center">
                {{ form_widget(form.save) }}
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}