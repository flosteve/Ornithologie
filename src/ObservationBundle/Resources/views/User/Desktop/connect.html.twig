{% extends '@Observation/layout.desktop.html.twig' %}
{% block title %}S'inscrire{% endblock %}

{% block content %}
    <div class="panel panel-default">
        <div class="panel-heading">
            <h1 class="panel-title">
                Formulaire de Connection/d'inscription
            </h1>
        </div>
        <div class="panel-body">
            {# Zone d'identification avec facebook ou google #}
            <div class="text-center">
                <h2>S'identifier avec </h2>
                <div>
                    <a href="#" onclick="fb_login();" class="btn btn-xs btn-primary"><i class="fa fa-facebook"></i> Facebook</a>
                    <a href="{{ path('hwi_oauth_service_redirect', {'service': 'google'}) }}" class="btn btn-xs btn-danger"><i class="fa fa-google-plus"></i></a>
                </div>
            </div>
            <hr/>
            <div class="row">
                {# Zone de connection #}
                <div id="left" class="col-md-6">
                    {# Gestion d'affichage des erreurs de connection #}
                    {% if error %}
                        <div class="alert alert-danger">
                            {{ error.messageKey| trans(error.messageData, 'security') }}
                        </div>
                    {% endif %}
                    <h3 class="text-center">Se connecter</h3>
                    {# Formulaire de connection préremplie du pseudo si dsponible #}
                    <form action="{{ path('user_login') }}" method="post" class="form-horizontal">
                        <div class="form-group">
                            <label for="username" class="control-label col-sm-3 required">Pseudo ou Email </label>
                            <div class="col-sm-5">
                                <input type="text" name="_username" id="username" class="form-control" value="{{ lastUsername }}">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="password" class="control-label col-sm-3 required">Mot de passe </label>
                            <div class="col-sm-5">
                                <input type="password" name="_password" id="password" class="form-control">
                            </div>
                        </div>
                        {# Checkbox se souvenir de moi #}
                        <div class="form-group">
                            <label for="remember_me" class="control-label col-sm-4"> Se souvenir de moi <input type="checkbox" name="_remember_me" id="remember_me" ></label>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-xs btn-primary">Se connecter</button>
                        </div>
                        <br>
                        <div class="text-center">
                            <a href="{{ path('user_forgot_password') }}">Mot de passe oublié</a>
                        </div>
                    </form>
                </div>
                <div id="right" class="col-md-6">
                    {# Zone d'inscriiption #}
                    <h3 class="text-center">S'inscrire</h3>
                    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
                    {{ form_errors(form) }}
                    {# Boucle sur les champs du form à l'exception du save et _token #}
                    {% for child in form.children if child.vars.name != 'save' and child.vars.name != '_token' %}
                        {# Gestion des champs plainPassword#}
                        {% if child.vars.name == 'plainPassword' %}
                            {% for password in child.children %}
                                <div class="form-group">
                                    {{ form_label(password, password.vars.label, {'label_attr': {'class': 'col-md-3 control-label'}}) }}
                                    <div class="col-md-6">
                                        {{ form_widget(password, {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                    {{ form_errors(password) }}
                                </div>
                            {% endfor %}
                        {% else %}
                            <div class="form-group">
                                {{ form_label(child, child.vars.label, {'label_attr': {'class': 'col-md-3 control-label'}}) }}
                                <div class="col-md-6">
                                    {# Gestion du champs birthDate #}
                                    {% if child.vars.name == 'birthDate' %}
                                        {{ form_widget(child) }}
                                    {% else %}
                                        {{ form_widget(child, {'attr': {'class': 'form-control'}}) }}
                                    {% endif %}
                                </div>
                                {{ form_errors(child) }}
                            </div>
                        {% endif %}
                    {% endfor %}
                    {# Affichage du bouton d'Enregistrement #}
                    <div class="text-center">
                        {{ form_widget(form.save) }}
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>


        </div>
    </div>
{% endblock %}