{# Vue de reset password sur pc #}
{% extends 'ObservationBundle::layout.desktop.html.twig' %}

{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block content %}
    <div class="panel panel-default">
        <div class="panel-heading">
            <h1>Réinitialisation d'un mot de passe</h1>
        </div>
        <div class="panel-body">
            {{ form_start(form, {'attr': {'class': 'form-horizontal'}})}}
            {{ form_errors(form) }}
            {% for password in form.plainPassword.children %}
                <div class="form-group">
                    {{ form_label(password, password.vars.label, {'label_attr': {'class': 'col-md-3 control-label'}}) }}
                    <div class="col-md-5">
                        {{ form_widget(password, {'attr':{'class': 'form-control'}})}}
                    </div>
                    {{ form_errors(password) }}
                </div>
            {% endfor %}
            <div class="text-center">
                {{ form_widget(form.save) }}
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}