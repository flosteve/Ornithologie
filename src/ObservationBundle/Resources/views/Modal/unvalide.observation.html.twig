<div id="invalide_observation_{{ observation.id }}" class="modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><i class="fa fa-times"></i></button>
                <h1 class="modal-title">Annulation de l'observation {{ observation.id }}</h1>
            </div>
            <div class="modal-body">
                <h4>Vous êtes sur le point d'annuler l'observation </h4>
                <ul class="list-unstyled">
                    <li>Oiseau : {{ observation.bird.nomVern }}</li>
                    <li>date : {{ observation.seeAt |date('d/m/y') }}</li>
                    <li>Quantité : {{ observation.quantity }}</li>
                    <li>Lieu : {{ observation.location.lieu }}</li>
                </ul>
            </div>
            <div class="modal-footer">
                <div class="pull-left">Etes vous sur ?</div>
                <div class="button-group pull-right">
                    <a href="{{ path('observation_unvalidate', {'id': observation.id}) }}" class="btn btn-xs btn-danger">Oui</a>
                    <a class="btn btn-xs btn-default" data-dismiss="modal">Anuler</a>
                </div>
            </div>
        </div>
    </div>
</div>